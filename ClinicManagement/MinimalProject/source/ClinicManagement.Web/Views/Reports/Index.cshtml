@model IEnumerable<ClinicManagement.Core.Domain.Entities.Report>
@{
    ViewData["Title"] = "Reports Dashboard";
}

<div class="container">
    <div class="row mb-4">
        <div class="col-md-8">
            <h1>Reports Dashboard</h1>
        </div>
        <div class="col-md-4 text-right">
            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#generateReportModal">
                Generate New Report
            </button>
        </div>
    </div>
    
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card text-white bg-primary mb-3">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="card-title">Sales Today</h5>
                            <h2 class="mb-0">$@ViewBag.SalesToday</h2>
                        </div>
                        <i class="fas fa-dollar-sign fa-3x opacity-50"></i>
                    </div>
                </div>
                <div class="card-footer bg-transparent border-0">
                    <a href="/Reports/SalesReport" class="text-white">View Details <i class="fas fa-arrow-right ml-1"></i></a>
                </div>
            </div>
        </div>
        
        <div class="col-md-3">
            <div class="card text-white bg-success mb-3">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="card-title">New Orders</h5>
                            <h2 class="mb-0">@ViewBag.NewOrders</h2>
                        </div>
                        <i class="fas fa-shopping-cart fa-3x opacity-50"></i>
                    </div>
                </div>
                <div class="card-footer bg-transparent border-0">
                    <a href="/Orders/Index" class="text-white">View Orders <i class="fas fa-arrow-right ml-1"></i></a>
                </div>
            </div>
        </div>
        
        <div class="col-md-3">
            <div class="card text-white bg-info mb-3">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="card-title">Low Stock</h5>
                            <h2 class="mb-0">@ViewBag.LowStockCount</h2>
                        </div>
                        <i class="fas fa-exclamation-triangle fa-3x opacity-50"></i>
                    </div>
                </div>
                <div class="card-footer bg-transparent border-0">
                    <a href="/Reports/InventoryReport" class="text-white">View Inventory <i class="fas fa-arrow-right ml-1"></i></a>
                </div>
            </div>
        </div>
        
        <div class="col-md-3">
            <div class="card text-white bg-secondary mb-3">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="card-title">Customers</h5>
                            <h2 class="mb-0">@ViewBag.CustomerCount</h2>
                        </div>
                        <i class="fas fa-users fa-3x opacity-50"></i>
                    </div>
                </div>
                <div class="card-footer bg-transparent border-0">
                    <a href="/Reports/CustomerReport" class="text-white">View Customers <i class="fas fa-arrow-right ml-1"></i></a>
                </div>
            </div>
        </div>
    </div>
    
    <div class="row mb-4">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-light">
                    <h5 class="mb-0">Recent Reports</h5>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="thead-light">
                                <tr>
                                    <th>Report Name</th>
                                    <th>Type</th>
                                    <th>Generated By</th>
                                    <th>Date</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null && Model.Any())
                                {
                                    foreach (var report in Model)
                                    {
                                        <tr>
                                            <td>@report.Name</td>
                                            <td>
                                                @switch (report.ReportType)
                                                {
                                                    case "Sales":
                                                        <span class="badge badge-primary">Sales</span>
                                                        break;
                                                    case "Inventory":
                                                        <span class="badge badge-success">Inventory</span>
                                                        break;
                                                    case "Customer":
                                                        <span class="badge badge-info">Customer</span>
                                                        break;
                                                    default:
                                                        <span class="badge badge-secondary">@report.ReportType</span>
                                                        break;
                                                }
                                            </td>
                                            <td>@report.GeneratedBy.FullName</td>
                                            <td>@report.GeneratedAt.ToString("MMM dd, yyyy")</td>
                                            <td>
                                                <a asp-action="ViewReport" asp-route-id="@report.Id" class="btn btn-sm btn-outline-primary">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                <a href="#" class="btn btn-sm btn-outline-secondary" onclick="downloadReport('@report.Id'); return false;">
                                                    <i class="fas fa-download"></i>
                                                </a>
                                                <a asp-action="DeleteReport" asp-route-id="@report.Id" class="btn btn-sm btn-outline-danger">
                                                    <i class="fas fa-trash"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="5" class="text-center">No reports available. Generate a new report to get started.</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="card-footer bg-light">
                    <a asp-action="AllReports" class="btn btn-link">View All Reports</a>
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0">Sales by Category</h5>
                </div>
                <div class="card-body">
                    <!-- This would be a chart in a real application -->
                    <div style="height: 200px; width: 100%; background-color: #f8f9fa; display: flex; align-items: center; justify-content: center;">
                        <div class="text-center">
                            <i class="fas fa-chart-pie fa-3x text-muted mb-3"></i>
                            <p>Category distribution chart would appear here</p>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="card">
                <div class="card-header bg-light">
                    <h5 class="mb-0">Revenue Trend</h5>
                </div>
                <div class="card-body">
                    <!-- This would be a chart in a real application -->
                    <div style="height: 200px; width: 100%; background-color: #f8f9fa; display: flex; align-items: center; justify-content: center;">
                        <div class="text-center">
                            <i class="fas fa-chart-line fa-3x text-muted mb-3"></i>
                            <p>Revenue trend chart would appear here</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Generate Report Modal -->
<div class="modal fade" id="generateReportModal" tabindex="-1" role="dialog" aria-labelledby="generateReportModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="generateReportModalLabel">Generate New Report</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form asp-action="GenerateReport" method="post">
                <div class="modal-body">
                    <div class="form-group">
                        <label>Report Name</label>
                        <input type="text" class="form-control" name="reportName" required>
                    </div>
                    <div class="form-group">
                        <label>Report Type</label>
                        <select class="form-control" name="reportType" required>
                            <option value="">-- Select Report Type --</option>
                            <option value="Sales">Sales Report</option>
                            <option value="Inventory">Inventory Report</option>
                            <option value="Customer">Customer Report</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label>Date Range</label>
                        <div class="row">
                            <div class="col">
                                <input type="date" class="form-control" name="startDate">
                                <small class="form-text text-muted">Start Date</small>
                            </div>
                            <div class="col">
                                <input type="date" class="form-control" name="endDate">
                                <small class="form-text text-muted">End Date</small>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label>Additional Filters</label>
                        <select class="form-control" name="filter">
                            <option value="">None</option>
                            <option value="Category">Filter by Category</option>
                            <option value="ProductType">Filter by Product Type</option>
                            <option value="Customer">Filter by Customer</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <div class="custom-control custom-checkbox">
                            <input type="checkbox" class="custom-control-input" id="includeCharts" name="includeCharts" checked>
                            <label class="custom-control-label" for="includeCharts">Include Charts & Graphs</label>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Generate Report</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function downloadReport(reportId) {
            // This would be implemented to download the report
            alert('Downloading report #' + reportId);
        }
    </script>
}
