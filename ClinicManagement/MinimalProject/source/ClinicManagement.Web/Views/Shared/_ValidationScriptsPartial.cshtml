@{
  var antiforgery = ViewContext.HttpContext.Items["Microsoft.AspNetCore.Mvc.ViewFeatures.IAntiforgeryFeature"] as
  Microsoft.AspNetCore.Antiforgery.IAntiforgery;
  var token = antiforgery?.GetAndStoreTokens(ViewContext.HttpContext).RequestToken;
}

<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

<script>
  $.ajaxSetup({
    headers: {
      "RequestVerificationToken": "@token"
    }
  });
</script>

 